{% extends '_layout/base.html.twig' %}

{% block content %}
    <div class="my-3 my-md-5">
        <div class="container">
            <div class="page-header">
                <h1 class="page-title">
                    {{ project.name }}
                </h1>
            </div>
            <div class="page-header">
                <p>{{ project.description }}</p>
            </div>
            <div class="row row-cards">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Issues</h3>
                        </div>
                        <div class="table-responsive">
                            <table class="table card-table table-hover table-vcenter">
                                <thead>
                                    <tr>
                                        <th>Subject</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for issue in issues %}
                                    <tr>
                                        <td>{{ issue.subject }}</td>
                                        <td class="w-1"></td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}